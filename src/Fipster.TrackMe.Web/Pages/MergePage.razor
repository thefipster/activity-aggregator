@page "/merge/{rangeValue}/{dateValue}"

@inject ApiService Api

@if (Model != null)
{
    <MudTable Items="@Model.Attributes.OrderBy(x => x.Parameter).ThenBy(x => x.Source)" Hover="true"
              Breakpoint="Breakpoint.Sm">
        <HeaderContent>
            <MudTh>Source</MudTh>
            <MudTh>Parameter</MudTh>
            <MudTh>Value</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Source">@context.Source</MudTd>
            <MudTd DataLabel="Parameter">@context.Parameter</MudTd>
            <MudTd DataLabel="Value">@context.Value</MudTd>
        </RowTemplate>
    </MudTable>
}


