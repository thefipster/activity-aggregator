<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudStack>
                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                    <MudText Typo="Typo.h6">@Title</MudText>
                    <MudText>@fileName</MudText>
                    <MudFileUpload T="IBrowserFile" Accept="@Filter" FilesChanged="OnFilesChanged">
                        <ActivatorContent>
                            <MudIconButton Color="Color.Primary"
                                           Disabled="@uploadDisabled"
                                           Icon="@Icon">
                            </MudIconButton>
                        </ActivatorContent>
                    </MudFileUpload>
                </MudStack>
                <MudProgressLinear Color="Color.Primary" Value="@progress"/>
            </MudStack>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>