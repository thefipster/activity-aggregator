<MudGrid>

    @if (inventory.Any())
    {
        @foreach (var item in inventory)
        {
            <MudItem xs="2">
                <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                    <MudStack>
                        <MudText Typo="Typo.subtitle2">@item.Key</MudText>
                        <MudText Typo="Typo.body1">@item.Value[0] days (@item.Value[2] items)</MudText>
                        <MudText Typo="Typo.body1">@item.Value[1] sessions (@item.Value[3] items)</MudText>
                    </MudStack>
                </MudPaper>
            </MudItem>
        }
    }

</MudGrid>