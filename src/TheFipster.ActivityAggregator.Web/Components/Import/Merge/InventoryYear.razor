@using TheFipster.ActivityAggregator.Domain.Tools
<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">Days @days.Count()</MudText>
    </MudCardHeader>
    <MudCardContent Class="d-flex flex-wrap gap-2">
        @if (days.Any())
        {
            @foreach (var day in days)
            {
                <MudText>@day.ToString(DateHelper.UiMinuteFormat)</MudText>
            }
        }
    </MudCardContent>
</MudCard>

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.subtitle1">Sessions @sessions.Count()</MudText>
    </MudCardHeader>
    <MudCardContent Class="d-flex flex-wrap gap-2">
        @if (sessions.Any())
        {
            @foreach (var session in sessions)
            {
                <MudText>@session.ToString(DateHelper.UiMinuteFormat)</MudText>
            }
        }
    </MudCardContent>
</MudCard>