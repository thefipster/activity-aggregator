@page "/import"
@using TheFipster.ActivityAggregator.Web.Components.Pages.Info.Tabs

<MudTabs @ref="@_tabs" Elevation="0" Centered="true" Color="Color.Primary" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel ID="@("upload")" Text="Upload">
        @if (_isRendered)
        {
            <UploadTab/>
        }
    </MudTabPanel>
    <MudTabPanel ID="@("scan")" Text="Scan">
        <ScanTab />
    </MudTabPanel>
    <MudTabPanel ID="@("assimilate")" Text="Assimilate">
        <AssimilateTab />
    </MudTabPanel>
    <MudTabPanel ID="@("batch")" Text="Batch">
        <BatchTab />
    </MudTabPanel>
    <MudTabPanel ID="@("unify")" Text="Unify">
        <MudText>Unify batches</MudText>
    </MudTabPanel>
</MudTabs>

